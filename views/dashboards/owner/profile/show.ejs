<% layout('layouts/boilerplate') %>
<div class="row vh-90">
	<div class="col-12">
		<div class="container">
			<div class="row justify-content-center">
					<div class="card col-6" style="width: 30rem;">
						<span class="text-center h3"><%= user.businessName %></span>
						<span class="text-center h6"><%= user.businessAddress %></span>
					  <img src="https://images.unsplash.com/photo-1470259078422-826894b933aa?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2706&q=80" class="card-img-top" alt="...">
					  <div class="card-body">
								<div class="row mb-2">
								  <div class="col text-end">
								  	Name:
								  </div>
								  <div class="col text-start">
								    <%= user.firstName %> <%= user.lastName %>
								  </div>
								</div>
								<div class="row mb-2">
								  <div class="col text-end">
								    Email:
								  </div>
								  <div class="col text-start">
								    <%= user.email %>
								  </div>
								</div>
								<div class="row mb-2">
								  <div class="col text-end">
								    Phone:
								  </div>
								  <div class="col text-start">
								    <%= user.phone %>
								  </div>
								</div>
								<div class="row mb-2">
									<div class="d-grid col-6">
										<a href="/owner/profile/edit" class="btn btn-success">Edit Profile</a>
									</div>
									<div class="col-6">
										<form class="d-grid" action="/owner/profile?_method=DELETE" method=POST>
											<a href="/owner/transactions" class="btn btn-success">Go to Reports</a>
									</div>
								</div>
					  </div>
					</div>
			</div>
		</div>
	</div>
</div>